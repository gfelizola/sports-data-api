rules_version = '2';
// Acesso ao Firestore é somente via API (Admin SDK).
// Estas regras negam acesso direto de clientes (mobile/web) ao banco.
// O banco nomeado afetado é: sports-data (configurar em firebase.json no deploy).
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
